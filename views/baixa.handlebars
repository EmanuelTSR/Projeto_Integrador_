<main>
    <!-- Formulário de Baixa -->
    <div class="container" style="margin-top: 50px;">
        <h1 class="text-center mb-4">Registrar Baixa de Estoque</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3" style="background-color:#f8f9fa; padding: 30px; border-radius: 10px;">
                <form action="/baixa" method="post">
                    <!-- Seleção de Produto -->
                    <div class="form-group mb-3">
                        <label for="produto" class="form-label">Produto</label>
                        <select name="produto" id="produto" class="form-control" required>
                            <option value="">Selecione o produto</option>
                            {{#each produtos}}
                                <option value="{{codigo}}">{{nome}} - Estoque: {{quantidade}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <!-- Quantidade da Baixa -->
                    <div class="form-group mb-3">
                        <label for="quantidade" class="form-label">Quantidade da Baixa</label>
                        <input type="number" name="quantidade" id="quantidade" class="form-control" min="1" required>
                    </div>

                    <!-- Motivo da Baixa -->
                    <div class="form-group mb-3">
                        <label for="motivo" class="form-label">Motivo</label>
                        <select name="motivo" id="motivo" class="form-control" required>
                            <option value="">Selecione o motivo</option>
                            <option value="venda">Venda</option>
                            <option value="perda">Perda</option>
                            <option value="descarte">Descarte</option>
                            <!-- Adicione outros motivos, se necessário -->
                        </select>
                    </div>

                    <!-- Botão de Envio -->
                    <div class="d-flex justify-content-between">
                        <a href="/inicio" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Registrar Baixa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
